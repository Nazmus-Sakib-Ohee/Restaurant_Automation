<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secondtab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nazmussakibohee.WifiOrdering.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/itemlist">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Selected Items"
            android:textColor="#d30fe1"
            android:textSize="20dp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="Choose Your Items\nFrom The Menu First"
                android:textColor="#000"
                android:textSize="17dp"
                android:textStyle="italic" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="Cost  :"
            android:textColor="#be0f95"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_alignTop="@+id/spinnertable"
            android:text="Table No :"
            android:textColor="#be0f95"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnertable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="30dp">

        </Spinner>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/textView14"
            android:layout_toRightOf="@+id/textView14"
            android:text="0 Taka"
            android:textColor="#be0f95"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Button
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/reset"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/textView14"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView14"
            android:background="@drawable/shape"
            android:text="Reset"
            android:textColor="#c41010"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/confirm"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/reset"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape"
            android:text="confirm"
            android:textColor="#c41010"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>